def is_prime(num):
    if num < 2:
        return False
    for i in range(2, int(num**0.5) + 1):
        if num % i == 0:
            return False
    return True

# Input
N = int(input())

# Find the next immediate prime number
next_prime = N + 1
while not is_prime(next_prime):
    next_prime += 1

# Output
print(next_prime)
